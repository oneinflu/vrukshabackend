{
  "info": {
    "name": "Vruksha Payment APIs",
    "description": "Collection of payment-related APIs for Vruksha admin panel",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Payments",
      "item": [
        {
          "name": "Get All Payments (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/payments/all",
              "host": ["{{baseUrl}}"],
              "path": ["api", "payments", "all"]
            },
            "description": "Get all payment records (Admin only)"
          }
        },
        {
          "name": "Record COD Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"orderId\": \"order_id_here\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/payments/record-cod",
              "host": ["{{baseUrl}}"],
              "path": ["api", "payments", "record-cod"]
            },
            "description": "Record a new COD payment for an order"
          }
        },
        {
          "name": "Update COD Payment Status (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"status\": \"SUCCESS\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/payments/update-cod-status/:paymentId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "payments", "update-cod-status", ":paymentId"],
              "variable": [
                {
                  "key": "paymentId",
                  "value": "payment_id_here",
                  "description": "ID of the payment to update"
                }
              ]
            },
            "description": "Update payment status for COD payments (Admin only)"
          }
        },
        {
          "name": "Create Razorpay Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"orderId\": \"order_id_here\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/payments/create-order",
              "host": ["{{baseUrl}}"],
              "path": ["api", "payments", "create-order"]
            },
            "description": "Create a new Razorpay order for online payment"
          }
        },
        {
          "name": "Verify Razorpay Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"razorpayOrderId\": \"rzp_order_id_here\",\n    \"razorpayPaymentId\": \"rzp_payment_id_here\",\n    \"razorpaySignature\": \"signature_here\",\n    \"paymentId\": \"payment_record_id_here\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/payments/verify",
              "host": ["{{baseUrl}}"],
              "path": ["api", "payments", "verify"]
            },
            "description": "Verify Razorpay payment after successful payment"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "your_admin_jwt_token_here",
      "type": "string"
    },
    {
      "key": "userToken",
      "value": "your_user_jwt_token_here",
      "type": "string"
    }
  ]
}